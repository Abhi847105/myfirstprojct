<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".btechModule">


    <TextView
        android:id="@+id/textView11"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Gate Syllabus"
        android:textSize="40dp"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:textStyle="bold"
        android:background="@color/hex_color"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="40dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <androidx.gridlayout.widget.GridLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:rowCount="12"
                app:columnCount="1"
                >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_row="1">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:id="@+id/lcr1">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/crb1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:backgroundTint="@color/hex_color"
                            android:contextClickable="true"
                            app:cardCornerRadius="20dp">

                            <TextView
                                android:id="@+id/tvb1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/tvb1"
                                android:gravity="center"
                                android:layout_gravity="center"
                                android:textSize="20dp"
                                android:textStyle="bold"/>
                        </androidx.cardview.widget.CardView>

                    </LinearLayout>

                    <ImageView
                        android:id="@+id/tvb2"
                        android:layout_width="match_parent"
                        android:layout_height="500dp"
                        android:layout_below="@+id/lcr1"
                        android:src="@drawable/tablegate"
                        android:visibility="gone" />

                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_row="1">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:id="@+id/lcr2"
                        android:layout_marginTop="20dp">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/crb2"
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:backgroundTint="@color/hex_color"
                            android:contextClickable="true"
                            app:cardCornerRadius="20dp">

                            <TextView
                                android:id="@+id/tvb3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/tvg2"
                                android:gravity="center"
                                android:layout_gravity="center"
                                android:textSize="20dp"
                                android:textStyle="bold"/>
                        </androidx.cardview.widget.CardView>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_below="@+id/lcr2"
                        android:layout_marginTop="10dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <androidx.cardview.widget.CardView
                                    android:layout_width="match_parent"
                                    android:layout_height="40dp"
                                    android:layout_margin="10dp"
                                    app:cardCornerRadius="20dp"
                                    android:id="@+id/CrGa"
                                    android:backgroundTint="@color/teal_200">

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="40dp"
                                        android:text="General Aptitude(GA)"
                                        android:textSize="20dp"
                                        android:gravity="center"
                                        android:textColor="@color/purple_500"/>

                                </androidx.cardview.widget.CardView>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="vertical"
                                    android:gravity="center"
                                    android:visibility="visible"
                                    android:layout_below="@+id/CrGa"
                                    android:id="@+id/GA">

                                    <Button
                                        android:id="@+id/button6"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="Verbal Aptitude"
                                        android:textSize="16dp"
                                        android:layout_margin="10sp"/>

                                    <Button
                                        android:id="@+id/button7"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="Quantitative aptitude"
                                        android:textSize="16dp"
                                        android:layout_margin="10sp"/>

                                    <Button
                                        android:id="@+id/button5"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="analytical aptitude"

                                        android:textSize="16dp"
                                        android:layout_margin="10sp"/>

                                    <Button
                                        android:id="@+id/button4"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="spatial aptitude"
                                        android:textSize="16dp"
                                        android:layout_margin="10sp"/>
                                </LinearLayout>

                            </RelativeLayout>

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <androidx.cardview.widget.CardView
                                android:id="@+id/CaCSE"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:layout_marginStart="10dp"
                                android:layout_marginTop="10dp"
                                android:layout_marginEnd="10dp"
                                android:layout_marginBottom="10dp"
                                android:backgroundTint="@color/teal_700"
                                app:cardCornerRadius="20dp">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="40sp"
                                    android:text="Computer Science for 85 marks"
                                    android:textSize="20dp"
                                    android:gravity="center"
                                    android:textColor="@color/hex_color"/>

                            </androidx.cardview.widget.CardView>


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:visibility="visible"
                                android:layout_below="@+id/CaCSE">

                                <Button
                                    android:id="@+id/button16"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="10sp"
                                    android:text="Engineering Mathematics" />

                                <Button
                                    android:id="@+id/button17"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="10sp"
                                    android:text="Digital Logic and Desing" />

                                <Button
                                    android:id="@+id/button14"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="10sp"
                                    android:text="Computer organisation and architecture" />

                                <Button
                                    android:id="@+id/button15"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="10sp"
                                    android:text="Programming and Data structure" />

                                <Button
                                    android:id="@+id/button12"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="10sp"
                                    android:text="algorithms" />

                                <Button
                                    android:id="@+id/button13"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="10sp"
                                    android:text="theory of computation" />

                                <Button
                                    android:id="@+id/button11"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="10sp"
                                    android:text="compiler design" />

                                <Button
                                    android:id="@+id/button10"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="10sp"
                                    android:text="operating system" />

                                <Button
                                    android:id="@+id/button9"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="10sp"
                                    android:text="database" />

                                <Button
                                    android:id="@+id/button8"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="10sp"
                                    android:text="computer networks" />
                            </LinearLayout>

                        </RelativeLayout>

                    </LinearLayout>

                </RelativeLayout>

            </androidx.gridlayout.widget.GridLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>