<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Home2">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="SpeakableTextPresentCheck">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.gridlayout.widget.GridLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:columnCount="4"
                app:rowCount="5"
                android:background="@drawable/img_1">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/welcome_to_4th_semester"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:layout_margin="20dp"
                    android:background="@drawable/java1"
                    android:textAlignment="center"
                    />


                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    app:cardCornerRadius="20dp"
                    app:layout_column="0"
                    app:layout_columnWeight="0"
                    app:layout_row="1"
                    app:layout_rowWeight="1">



                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:id="@+id/lvi1"
                            android:layout_margin="10dp"
                            android:onClick="btech">

                            <de.hdodenhof.circleimageview.CircleImageView
                                android:id="@+id/civ1"
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:src="@drawable/btech" />

                            <TextView
                                android:id="@+id/textView2"
                                android:layout_width="100dp"
                                android:layout_height="wrap_content"
                                android:text="B.TECH"
                                android:textStyle="bold"
                                android:gravity="center"/>
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/lvi2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_toRightOf="@+id/lvi1"
                            android:orientation="vertical"
                            android:layout_margin="10dp"
                            android:onClick="Gate">

                            <de.hdodenhof.circleimageview.CircleImageView
                                android:id="@+id/civ2"
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:src="@drawable/gate1" />

                            <TextView
                                android:id="@+id/textView3"
                                android:layout_width="100dp"
                                android:layout_height="wrap_content"
                                android:text="GATE"
                                android:textStyle="bold"
                                android:gravity="center"/>
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/lvi3"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_toRightOf="@+id/lvi1"
                            android:orientation="vertical"
                            android:layout_margin="10dp">

                            <de.hdodenhof.circleimageview.CircleImageView
                                android:id="@+id/civ3"
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:src="@drawable/sit2" />

                            <TextView
                                android:id="@+id/textView4"
                                android:layout_width="100dp"
                                android:layout_height="wrap_content"
                                android:text="SIT"
                                android:gravity="center"
                                android:textStyle="bold"/>
                        </LinearLayout>
                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="350dp"
                    android:layout_margin="10dp"
                    app:cardCornerRadius="20dp"
                    app:layout_column="0"
                    app:layout_columnWeight="0"
                    app:layout_row="4"
                    app:layout_rowWeight="2">





                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:text="PROGRAMMING LANGUAGE"
                            android:textStyle="bold"
                            android:textSize="20dp"
                            android:background="@drawable/image1"
                            android:textAlignment="center"
                            android:gravity="center"
                            android:layout_marginBottom="10dp"/>

                        <LinearLayout
                            android:id="@+id/lvr2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:id="@+id/lvir1"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_margin="10dp"
                                android:orientation="vertical">

                                <de.hdodenhof.circleimageview.CircleImageView
                                    android:id="@+id/civr1"
                                    android:layout_width="100dp"
                                    android:layout_height="100dp"
                                    android:src="@drawable/opps"
                                    android:onClick="Oops"/>

                                <TextView
                                    android:id="@+id/textView5"
                                    android:layout_width="100dp"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:text="C++"
                                    android:textStyle="bold" />
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/lvic2"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_margin="10dp"
                                android:layout_toRightOf="@+id/lvi1"
                                android:orientation="vertical"
                                android:onClick="java">

                                <de.hdodenhof.circleimageview.CircleImageView
                                    android:id="@+id/civc2"
                                    android:layout_width="100dp"
                                    android:layout_height="100dp"
                                    android:src="@drawable/java" />

                                <TextView
                                    android:id="@+id/textView6"
                                    android:layout_width="100dp"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:text="JAVA"
                                    android:textStyle="bold" />
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/lvi3c3"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_margin="10dp"
                                android:layout_toRightOf="@+id/lvi1"
                                android:orientation="vertical">

                                <de.hdodenhof.circleimageview.CircleImageView
                                    android:id="@+id/civc3"
                                    android:layout_width="100dp"
                                    android:layout_height="100dp"
                                    android:src="@drawable/python1" />

                                <TextView
                                    android:id="@+id/textView7"
                                    android:layout_width="100dp"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:text="PYTHON"
                                    android:textStyle="bold" />
                                </LinearLayout>
                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:layout_marginTop="10dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:id="@+id/lvir3"
                                android:layout_margin="10dp">

                                <de.hdodenhof.circleimageview.CircleImageView
                                    android:id="@+id/civr3"
                                    android:layout_width="100dp"
                                    android:layout_height="100dp"
                                    android:src="@drawable/kotlin" />

                                <TextView
                                    android:id="@+id/textViewr3"
                                    android:layout_width="100dp"
                                    android:layout_height="wrap_content"
                                    android:text="KOTLIN"
                                    android:textStyle="bold"
                                    android:gravity="center"/>
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/lvirc2"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_toRightOf="@+id/lvi1"
                                android:orientation="vertical"
                                android:layout_margin="10dp">

                                <de.hdodenhof.circleimageview.CircleImageView
                                    android:id="@+id/civr3c2"
                                    android:layout_width="100dp"
                                    android:layout_height="100dp"
                                    android:src="@drawable/javasript1" />

                                <TextView
                                    android:id="@+id/textr3c2"
                                    android:layout_width="100dp"
                                    android:layout_height="wrap_content"
                                    android:text="JAVASCRIPT"
                                    android:textStyle="bold"
                                    android:gravity="center"/>
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/lvir3c3"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_toRightOf="@+id/lvi1"
                                android:orientation="vertical"
                                android:layout_margin="10dp">

                                <de.hdodenhof.circleimageview.CircleImageView
                                    android:id="@+id/civr3c3"
                                    android:layout_width="100dp"
                                    android:layout_height="100dp"
                                    android:src="@drawable/html" />

                                <TextView
                                    android:id="@+id/textViewr3c3"
                                    android:layout_width="100dp"
                                    android:layout_height="wrap_content"
                                    android:text="HTML"
                                    android:gravity="center"
                                    android:textStyle="bold"/>
                            </LinearLayout>
                        </LinearLayout>


                    </LinearLayout>

                </androidx.cardview.widget.CardView>




                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="340dp"
                    android:layout_margin="10dp"
                    app:cardCornerRadius="20dp"
                    app:layout_column="0"
                    app:layout_columnWeight="0"
                    app:layout_rowWeight="2">





                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:text="4TH SEMESTER ALL SUBJECT"
                            android:textStyle="bold"
                            android:textSize="20dp"
                            android:background="@drawable/image3"
                            android:textAlignment="center"
                            android:gravity="center"
                            android:layout_marginBottom="10dp"/>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_margin="10dp"
                                android:orientation="vertical">

                                <de.hdodenhof.circleimageview.CircleImageView
                                    android:layout_width="100dp"
                                    android:layout_height="100dp"
                                    android:src="@drawable/coa" />

                                <TextView
                                    android:layout_width="100dp"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:text="COA"
                                    android:textStyle="bold" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_margin="10dp"
                                android:layout_toRightOf="@+id/lvi1"
                                android:orientation="vertical">

                                <de.hdodenhof.circleimageview.CircleImageView
                                    android:layout_width="100dp"
                                    android:layout_height="100dp"
                                    android:src="@drawable/os" />

                                <TextView
                                    android:layout_width="100dp"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:text="OS"
                                    android:textStyle="bold" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_margin="10dp"
                                android:layout_toRightOf="@+id/lvi1"
                                android:orientation="vertical">

                                <de.hdodenhof.circleimageview.CircleImageView
                                    android:layout_width="100dp"
                                    android:layout_height="100dp"
                                    android:src="@drawable/daa" />

                                <TextView
                                    android:layout_width="100dp"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:text="DAA"
                                    android:textStyle="bold" />
                            </LinearLayout>
                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:layout_marginTop="10dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:layout_margin="10dp">

                                <de.hdodenhof.circleimageview.CircleImageView
                                    android:layout_width="100dp"
                                    android:layout_height="100dp"
                                    android:src="@drawable/de" />

                                <TextView
                                    android:layout_width="100dp"
                                    android:layout_height="wrap_content"
                                    android:text="DE"
                                    android:textStyle="bold"
                                    android:gravity="center"/>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_toRightOf="@+id/lvi1"
                                android:orientation="vertical"
                                android:layout_margin="10dp">

                                <de.hdodenhof.circleimageview.CircleImageView
                                    android:layout_width="100dp"
                                    android:layout_height="100dp"
                                    android:src="@drawable/dm" />

                                <TextView
                                    android:layout_width="100dp"
                                    android:layout_height="wrap_content"
                                    android:text="DM"
                                    android:textStyle="bold"
                                    android:gravity="center"/>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_toRightOf="@+id/lvi1"
                                android:orientation="vertical"
                                android:layout_margin="10dp">

                                <de.hdodenhof.circleimageview.CircleImageView
                                    android:layout_width="100dp"
                                    android:layout_height="100dp"
                                    android:src="@drawable/dsa" />

                                <TextView
                                    android:layout_width="100dp"
                                    android:layout_height="wrap_content"
                                    android:text="DSA"
                                    android:gravity="center"
                                    android:textStyle="bold"/>
                            </LinearLayout>
                        </LinearLayout>


                    </LinearLayout>

                </androidx.cardview.widget.CardView>


            </androidx.gridlayout.widget.GridLayout>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>